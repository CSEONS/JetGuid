@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" class="w-100 h-100 ">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <title>Document</title>
</head>

<body class="w-100 h-100 ">
    <section style="background-color: #000;">
        <div class="container py-5">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            <form class="mb-md-5 mt-md-4" method="post" asp-controller="@nameof(AccountController).CutController()" asp-action="@nameof(AccountController.Login)">

                                <h2 class="fw-bold mb-2 text-uppercase" style="color: #00923B;">Войти</h2>
                                <p class="text-white-50 mb-5" style="color: #00923B;">Пожалуйста, введите email и пароль!</p>

                                <div class="form-outline form-white mb-4 d-flex row justify-content-center">
                                    <label class="form-label" for="typeEmailX" style="color: #00923B;">Email</label>
                                    <input type="email" id="typeEmailX" name="@nameof(Model.Email)" class="form-control form-control-lg" style="width: 370px;" />
                                </div>

                                <div class="form-outline form-white mb-4 d-flex row justify-content-center ">
                                    <label class="form-label" for="typePasswordX" style="color: #00923B;">Пароль</label>
                                    <input type="password" id="typePasswordX" name="@nameof(Model.Password)" class="form-control form-control-lg" style="width: 370px;" />
                                </div>

                                <p class="small mb-5 pb-lg-2">
                                    <a class="text-white-50" href="#!" style="color: #00923B;">Забыли пароль?</a>
                                </p>

                                <button class="btn btn-outline-light btn-lg px-5" type="submit" style="border-color: #00923B;">Войти</button>

                            </form>

                            <div>
                                <p class="mb-0">
                                    Нет аккаунта? <a asp-controller="@nameof(AccountController).CutController()" asp-action="@nameof(AccountController.Register)" class="fw-bold" style="color: #00923B;">Зарегистрироваться</a>
                                </p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

</html>